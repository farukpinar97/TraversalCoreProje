@model List<ContactUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Bize Ulaşın Mesajları</h1>

<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Gönderen</td>
        <td>Konu</td>
        <td>Tarih</td>
        <td>Sil</td>
        <td>Mesajı Aç</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ContactUsID</th>
            <td>@item.Name</td>
            <td>@item.Subject</td>
            <td>@item.MessageDate.ToString("dd.MMM.yyyy")</td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-dark">Mesajı Aç</a></td>
        </tr>
    }
</table>

